doctype html
html(lang="en")
  head
    title #{Title}
    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.2.14/angular.min.js')
    script(src='//jashkenas.github.io/underscore/underscore-min.js')
    script(src='/static/main.js')
    link(rel='stylesheet', href='/static/main.css')
  body(ng-app='main' ng-controller='ctr')
    div.title.
      {{title}}
    .frame(ng-style='frame')
      .image(ng-style='style')
      #prev(ng-click='prev()')
        div(arrow-prev)
      #next(ng-click='next()')
        div(arrow-next)
    thumbs-gallery(thumbs='deleted', event='deleted_gallery_event', ng-show='apps.settings.deleted_gallery')
    thumbs-gallery(thumbs='thumbs', ng-model='id', event='gallery_event' ng-show='apps.settings.gallery')
    div.left_side
      div.button(ng-click='apps.settings.gallery=!apps.settings.gallery;') Gallery {{apps.settings.gallery ? 'on': 'off'}}
      div.button(ng-click='delete_img()') Delete
      div.button(ng-click='apps.settings.deleted_gallery=!apps.settings.deleted_gallery;') Undelete
      div(ng-style='{border:"2px solid #aaa"}')
        div
          b
            u Filters
        div(file-types)
